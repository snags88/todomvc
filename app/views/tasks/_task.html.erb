<%= li_for_task_list(task) do %>
  <div class="view">
    <%= form_for [task.list, task], :remote => true do |f| %>
      <%= f.check_box :status, :class => "toggle" %>
    <%- end -%>
    <label><%= task.description %></label>
    <%= link_to [task.list, task], :method => :delete, :remote => true do %>
      <button class="destroy">X</button>
    <%- end -%>
  </div>
  <%= form_for [task.list, task], :remote => true, html: {:class => "edit_description"} do |f| %>
    <%= f.text_field :description, :class => "edit" %>
    <%= f.submit :style => "display: none"%>
  <%- end -%>
<%- end -%>
